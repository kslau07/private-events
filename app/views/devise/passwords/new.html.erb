<div class="devise">
  <h2 class="devise__title">Forgot your password?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise__text-input" %>
    </div>
  
    <div class="devise__actions">
      <%= f.submit "Send me reset instructions", class: "btn btn--primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<div class="devise">
  <h1 class="devise__title">log in</h1>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="devise__field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise__text-input" %>
      <%= f.label :email, class: "devise__label" %>
    </div>
  
    <div class="devise__field">
      <%= f.password_field :password, autocomplete: "current-password", class: "devise__text-input" %>
      <%= f.label :password, class: "devise__label" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field devise__remember-couple">
        <%= f.check_box :remember_me, class: "devise__checkbox" %>
        <%= f.label :remember_me, class: "devise__checkbox-label" %>
      </div>
    <% end %>
  
    <div class="devise__actions">
      <%= f.submit "Log in", class: "btn btn--primary btn--wide" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>

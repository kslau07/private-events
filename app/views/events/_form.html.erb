<%= form_with model: @event, class: "event-compact form", url: events_path, method: :post do |form| %>
	<%= render partial: "errors", locals: { activerecord_object: @event } %>

	<div class="form__field-couple">
		<%= form.label :date, "Date:" %>
		<%= form.date_field :event_date, class: "form__input" %>
	</div>
	
	<div class="form__field-couple form__field-couple--split form__field-couple--flex1">
		<%= form.label :description, "Description:" %>
		<%= form.text_field :description,
												class: "form__input form__input--flex1",
												placeholder: 'The coolest event ever.',
												input_html: { autofocus: true } %>
	</div>

	<div class="event__actions">
		<%= link_to "Cancel", events_path, class: "btn btn--primary" %>
		<%= form.submit class: "btn btn--primary" %>
	</div>
<% end %>
<%= render "back" %>
<main class="container">
  <div class="event-full">
    <%= image_tag "event.svg", { class: '', size: "250", alt: 'A picture of a calendar with a checkmark.' }%>
    <div class="event-full__info">
      <h1 class="event-full__title"><%= @event.title %></h1>
      <div class="event-full__date">
        <span>
          <%= @event.event_date.strftime('%B') %>
          <%= @event.event_date.strftime('%-e').to_i.ordinalize %>,
          <%= @event.event_date.strftime('%A') %>
          (<%= @event.event_date.strftime('%Y') %>)
        </span>
        <span class="event-full__creator"> --created by <%= @event.creator.email %></span>
      </div>
      <span class="event-full__description"><%= @event.description %></span>
      <h2 class="event-full__list-title">attendees:</h2>
      <% @event.attendees.each_with_index do |attendee, i| %>
        <div><%= "#{i+1}. #{attendee.email}" %></div>
      <% end %>
    </div>
  </div>
  <%= render "spacer" %>
  <%= render "invite" if current_user == @event.creator %>
</main>

<header class="navbar">
		<div class="brand">
			<div class="brand__logo">
				<%= image_tag "spy.svg",  { class: 'navbar__logo', alt: 'A logo of a spy.', size: "50" }%>
			</div>
			<div class="brand__text">
				<h1>private events</h1>
			</div>
		</div>
		<div class="links">
			<div class="link link--active">
				<%= link_to "all events", '' %>
			</div>
			<div class="link links--split">
				<% if current_user %>
					<%= link_to "my events", user_path(current_user.id) %>
				<% else %>
					<span>You are not logged in.</span>
				<% end %>
			</div>
			<div class="link">
				<%= link_to  "Sign up", new_user_registration_path %>
			</div>
			<div class="link">
				<%= link_to  "Log in", new_user_session_path %>
			</div>
		</div>
	</header>